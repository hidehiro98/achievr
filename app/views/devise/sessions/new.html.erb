<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card">
    <div class="card-header">
        <h2 class="card-title">Log in</h2>
    </div>
    <div class="card-content">
      <div class="form-group">
          <%= f.input :email, required: false, autofocus: true, placeholder: "Enter email", class: "form-control input-no-border"%>
      </div>
      <div class="form-group">
          <label>Password</label>
          <%= f.input :password, required: false, label: "ID", label: "Password", placeholder: "Password", class: "form-control input-no-border"%>
      </div>
    </div>
    <div class="card-footer text-center">
      <%= f.button :submit, "Log in", class: "btn btn-fill btn-wd" %>
      <div class="forgot">
          <%#= link_to "Forgot your password?", %>
          <a href="#pablo">Forgot your password?</a>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
