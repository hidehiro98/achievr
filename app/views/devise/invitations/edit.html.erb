<div class="wrapper" style="background-color: #3D2C63">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :invitation_token %>
          <div class="card">
            <div class="card-header">
                <h2 class="card-title text-center">Choose a Password</h2>
            </div>
            <div class="card-content">
              <div class="form-group">
                  <%= f.input :password, class: "input-no-border" %>
              </div>
              <div class="form-group">
                  <%= f.input :password_confirmation, class: "input-no-border" %>
              </div>
            </div>
            <div class="card-footer text-center">
                <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: "btn-pink" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>