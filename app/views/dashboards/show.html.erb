            </div>
          </div>
          <div class="col-xs-12 col-md-6">
            <div class="card">
              <h3>Meet the mentor</h3>
              <div class="mentor">
                <div class="mentor-photo">
                  <% if @user.mentor %>
                    <%= image_tag @user.mentor.photo, class: 'img-circle img-responsive' %>
                  <% end %>
                </div>
                <div class="mentor-text">
                  <h4>
                    <%= @user.mentor.first_name %> <%= @user.mentor.last_name %>
                  </h4>
                  <p>
                    <%= @user.mentor.bio %>
                  </p>
                </div>
              </div>
              <div class="btn btn-primary" id="meet-the-mentor">Click to more info and set the meeting</div>
            </div>
          </div>

          <% @users.each do |user| %>
            <div class="col-xs-12 col-md-6">
              <div class="card" id="team">
                <h3>email</h3>
                <h4><%= user.email %></h4>
                <br>
                <h5>Bio</h5>
                <p><%= user.bio %></p>
                <!-- Testing purposes -->
