    <div id="main">
      <div class="lg-card">
        <div class="lg-card-content">
          <i class="fa fa-times close" aria-hidden="true"></i>
          <h1>Close me</h1>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <div class="card">
              <h3>HR Docs</h3>
              <div class="checkbox">
                <label>
                  <h4>
                    <input type="checkbox" value="first_checkbox">
                    <a href="#">Fill the personal finformation</a>
                  </h4>
                </label>
              </div>
              <div class="checkbox">
