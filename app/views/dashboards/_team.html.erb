<div class="tab-pane" id="team">
  <div class="lg-card">
    <div class="lg-card-content">

      <h2>The <%= @team.name %></h2>
      <p><%= @team.description %></p>
      <br>
        <div class="content-container-team-detail">
          <div class="row">
            <div class="owl-carousel owl-theme" id="team-details">
              <% @team.users.each do |member| %>
                <div class="team-member" id="show-<%= member.email %>">
                  <div class="card s-card team-card">
                    <div class="user-profile-small">
                    <%= image_tag member.photo %>
                      <!-- <img src="http://i.pravatar.cc/100?img=<%= (1..50).to_a.sample %>" alt="<%= member.first_name %>" class="img-circle"> -->
                      <div class="user-profile-text">
                        <div class="username"><%= member.first_name %> <%= member.last_name %></div>
                        <div class="position"><strong><%= member.position %></strong></div>
                        <div class="email">
                          <strong><%= member.email %></strong>
                        </div>
                        <div class="contact-ph">Office: <%= member.phone_number %></div>
                        <div class="description"><%= member.bio %></div><br>
                        <p><strong>Fun Fact:</strong></p>
                        <div class="description"><%= member.fun_fact %></div>
                      </div>
                    </div>
                  </div>
                </div>
              <!-- <div class="card hidden" id="hide-<%= member.email %>">hello</div> -->
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
