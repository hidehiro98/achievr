          <%= render 'personal_information' %>
        </div>
      </div>


      <div class="lg-card-content">
        <div class="live-content">
          <!-- WHERE TO GO -->
          <%= render 'where' %>


      <!-- HR -->
      <%#= render 'hr' %>

      <!-- Tools -->
      <%= render 'tools' %>

    </div>



