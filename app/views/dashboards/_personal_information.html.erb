<hr>
  <div class="content-container">
    <div class="completed-badge">
      <%= image_tag("icons/001-quality.png", class: toggle_badge("personal-information"), id: "badge-personal-information") %>
    </div>
    
    <h2>Personal Information</h2>
      <p>
        In order to avoid having you filling many documents and asking 
        the same information again and again, please fill the below form.
      </p>
    <div>
      <%= simple_form_for current_user, remote: true do |f| %>
        <%= f.input :birthday, :start_year => 1900 %>
        <%= f.input :address %>
        <%= f.input :city, collection: cities %>
        <%= f.input :prefecture, collection: prefectures %>
        <%= f.input :postal_code, label: 'Postal Code' %>
        <%= f.input :bank_account_number, label: 'Bank Account Number' %> 
        <%= f.input :social_security_number, label: 'Social Security Number' %>
        <%= f.input :person_to_contact, label: 'Person to Contact in Case of Emergency' %>
        <%= f.submit 'Submit', class: 'btn btn-pink center-block', id: "personal-information" %>
      <% end %>
    </div>
  </div>